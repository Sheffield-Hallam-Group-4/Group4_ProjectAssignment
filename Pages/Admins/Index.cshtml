@page
@model Group_Project1.Pages.Admins.IndexModel

@{
    ViewData["Title"] = "Index";
}
<h1>:: View Admin Page ::</h1>
<br />
<br />

<div>
    <table class="table table-active">
        <thead>
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.AdminRec[0].AdminID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AdminRec[0].AdminName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AdminRec[0].AdminLastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AdminRec[0].Email)
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>


        @for (int i = 0; i < Model.AdminRec.Count; i++)
        {
            <tr>
                <td>@Model.AdminRec[i].AdminID</td>
                <td>@Model.AdminRec[i].AdminName</td>
                <td>@Model.AdminRec[i].AdminLastName</td>
                <td>@Model.AdminRec[i].Email</td>
                <td>
                    <a asp-page="/Admins/Edit" asp-route-id="@Model.AdminRec[i].Id">Update</a>
                    <a asp-page="/Admins/Delete" asp-route-id="@Model.AdminRec[i].Id">Delete</a>
                </td>
            </tr>
        }
    </table>
</div>
