@page
@model Group_Project1.Pages.Customers.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<h1>:: Delete Customer Page ::</h1>

<h2 class="text-danger">Are you sure want to delete the record?</h2>

<div class="table-active">

    <div>
        <label asp-for="CustomerRec.CustomerID"></label>
        <span> : </span>
        @Model.CustomerRec.CustomerID <!--razor code where you access the model from cshtml.cs file-->
    </div>

    <div>
        <label asp-for="CustomerRec.CustomerName"></label>
        <span> : </span>
        @Model.CustomerRec.CustomerName
    </div>

    <div>
        <label asp-for="CustomerRec.CustomerLastName"></label>
        <span> : </span>
        @Model.CustomerRec.CustomerLastName
    </div>

    <div>
        <label asp-for="CustomerRec.Email"></label>
        <span> : </span>
        @Model.CustomerRec.Email
    </div>

</div>
<br />
<div>
    <form method="post">
        <input type="hidden" asp-for="CustomerRec.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
