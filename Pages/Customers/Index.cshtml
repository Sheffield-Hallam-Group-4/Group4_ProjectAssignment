@page
@model Group_Project1.Pages.Customers.IndexModel

@{
    ViewData["Title"] = "Index";
}
<h1>:: View Customer Page ::</h1>
<br />
<br />

<div>
    <table class="table table-active">
        <thead>
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.CustomerRec[0].CustomerID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CustomerRec[0].CustomerName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CustomerRec[0].CustomerLastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CustomerRec[0].Email)
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>


        @for (int i = 0; i < Model.CustomerRec.Count; i++)
        {
            <tr>
                <td>@Model.CustomerRec[i].CustomerID</td>
                <td>@Model.CustomerRec[i].CustomerName</td>
                <td>@Model.CustomerRec[i].CustomerLastName</td>
                <td>@Model.CustomerRec[i].Email</td>
                <td>
                    <a asp-page="/Customers/Edit" asp-route-id="@Model.CustomerRec[i].Id">Update</a>
                    <a asp-page="/Customers/Delete" asp-route-id="@Model.CustomerRec[i].Id">Delete</a>
                </td>
            </tr>
        }
    </table>
</div>